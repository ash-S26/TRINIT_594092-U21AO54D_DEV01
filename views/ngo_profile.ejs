<%- include("partials/header") %>

<section>
    <h1 class = "profile-head"><%= obj.name %></h1>
    <div class="card" style="width: 30rem;float: left;margin: 20px;text-align: center;">    
        <div class="card-body">
          <h3 class="card-title tagline2">Vision</h3>
          <p class="card-text"><%= obj.vision %></p>
        </div>
      </div>
      <div class="card" style="width: 30rem;float: left;margin: 20px;text-align: center;">    
        <div class="card-body">
            <div class="card-body">
                <h3 class="card-title tagline2">Mission</h3>
                <p class="card-text"><%= obj.mission %></p>
              </div>
        </div>
      </div>  
      <div class="card" style="width: 30rem;float: left;margin: 20px;text-align: center;">    
        <div class="card-body">
            <div class="card-body">
                <h3 class="card-title tagline2">History</h3>
                <p class="card-text"><%= obj.history %></p>
              </div>
        </div>
      </div>  
      <div class="card" style="width: 30rem;float: left;margin: 20px;text-align: center;">    
        <div class="card-body">
            <div class="card-body">
                <h3 class="card-title tagline2">Previous Work</h3>
                <p class="card-text"><%= obj.previousWork %></p>
              </div>
        </div>
      </div>  
      <div class="card" style="width: 30rem;float: left;margin: 20px;text-align: center;">    
        <div class="card-body">
            <div class="card-body">
                <h3 class="card-title tagline2">Steps to achieve goal</h3>
                <p class="card-text"><%= obj.howToAchiveGoal %></p>
              </div>
        </div>
      </div>  
      <div class="card" style="width: 30rem;float: left;margin: 20px;text-align: center;">    
        <div class="card-body">
            <div class="card-body">
                <h3 class="card-title tagline2" >Achievements</h3>
                <p class="card-text"><%= obj.achievement %></p>
              </div>
        </div>
      </div>  
      <div class="card" style="width: 30rem;float: left;margin: 20px;text-align: center;">    
        <div class="card-body">
            <div class="card-body">
                <h3 class="card-title tagline2">Fields of Work</h3>
                <% (obj.workFeild).forEach(function (item) { %>
                    <p class="card-text"><%= item %></p>
                <% }); %>
              </div>
        </div>
      </div>  
</section>

<section>
    <h2>Donate to NGO</h2>
    <form method="post" action="/listofngo/<%= ngoid %>">
        <div class="form-group">
          <label for="exampleInputEmail1">Your Email Address</label>
          <input name="user" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
          
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Amount</label>
          <input name="amount" type="text" class="form-control" id="exampleInputPassword1" placeholder="Amount in INR">
        </div>
        <button type="submit" class="btn btn-primary">Pay</button>
      </form>
</section>

